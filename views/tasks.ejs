<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tasks List</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Tasks List</h1>
    <a href="/tasks/new">Create New Task</a>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td>
            <a href="/tasks/<%= task.id %>">View</a>
            <a href="/tasks/<%= task.id %>/edit">Edit</a>
            <form
              action="/tasks/<%= task.id %>?_method=DELETE"
              method="POST"
              style="display: inline"
            >
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
